<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <TextBox x:Name="MessageBox" Width="280" Height="30" Margin="5"/>
            <Button Content="Send" Width="50" Click="SendButton_Click" />
            <Button Content="📷" Width="30" Click="SendImage_Click" Margin="5,0,0,0"/>
        </StackPanel>
        <ListBox x:Name="ChatBox" />
    </DockPanel>
</Window>
